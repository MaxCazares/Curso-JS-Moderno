extends ./layout/index.pug

block contenido
    main.container.mt-5
        h1.text-center.mt-5 #{pagina}
        
        blockquote.text-center Lee sobre nuestro clientes y sus experiencias 
        include ./layout/bloque-testimoniales.pug

        
        .row
            .col-md-12
                h2.d-block.w-100.text-center Agrega un Testimonial
                if(errores)
                    each error in errores
                        .alert.col.alert-danger.text-center= error.mensaje

            .row.justify-content-center.col
                .col-md-8
                    form(action="/testimoniales" method="POST") 
                        .form-group 
                            label(for="nombre") Nombre 
                            input#nombre(type="text", name="nombre", placeholder="Tu nombre", class="form-control", value= nombre)
                        .form-group 
                            label(for="correo") Email
                            input#email(type="email", name="email", placeholder="Tu email", class="form-control", value= email)
                        .form-group 
                            label(for="mensaje") Mensaje 
                            textarea#mensaje(name="mensaje", rows="5", placeholder="Tu mensaje", class="form-control")= mensaje
                        input.btn.btn-success.btn-block(type="submit")